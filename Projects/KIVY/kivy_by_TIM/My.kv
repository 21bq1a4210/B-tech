MyGrid:

<MainWindow>:
    name:"main"
    GridLayout:
        cols:1
        GridLayout:
            clos:2
            Label:
                text:"Passwd:"
            TextInput:
                id: passw
                multiline:False
        Button:
            text:"Submit"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction="left"
<SecondWindow>:
    name:"second"
    Button:
        text:"Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction="right"

<MyGrid>:
    first_name_input: first_name
    second_name_input: second_name
    email_input: email
    orientation:"vertical"
    GridLayout:
        cols:2
        Label:
            text:"First-Name: "
            size_hint:.10,None
        TextInput:
            id: first_name
            multiline:False
            size_hint:.10,None
        Label:
            text:"Last-Name: "
            size_hint:.10,None
        TextInput:
            id: second_name
            multiline:False
            size_hint:.10,None
        Label:
            text:"Email: "
            size_hint:.10,None
        TextInput:
            id: email
            multiline:False
            size_hint:.10,None
    Button:
        text:"Submit"
        size_hint:0.5,None
        pos_hint:{"center_x":.5,"top":1}
        background_color:0,0,1,1
        on_press:root.pressed(self)