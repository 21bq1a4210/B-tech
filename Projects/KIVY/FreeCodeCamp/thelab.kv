<WidgetExample>:
    cols:3
    ToggleButton:
        text:"OFF"
        on_state:root.onToggleButtonState(self)
        size_hint:None,1
        width:"100dp"
    Button:
        text:"Click Here"
        on_press:root.onButtonClick()
        disabled: not root.count_enabled
    Label:
        text:root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size:"80dp"
        color:0,0,1,1
    Switch:
        on_active:root.onActive(self)
        size_hint:None,1
        width:"100dp"
        id: on_active
        active:True
    Slider:
        disabled:not on_active.active
        id: my_slider
        min:0
        max:100
        value:50
        on_value:root.onSliderValue(self)
        orientation:"vertical"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:str(int(my_slider.value))
        ProgressBar:
            max:100
            value:my_slider.value
            size_hint:1,None
    BoxLayout:
        orientation:"horizontal"

        TextInput:
            id:my_txt
            text:"foo"
            multiline:False
            on_text_validate: root.onTextvalidate(self)
        Label:
            text:"Your name is:"+root.text_input_str

